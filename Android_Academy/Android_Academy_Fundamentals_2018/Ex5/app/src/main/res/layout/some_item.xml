<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        card_view:cardCornerRadius="4dp"
        tools:context=".NewsListActivity" android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <TextView
                android:id="@+id/category"
                android:text="Category"
                android:layout_width="0dp"
                android:layout_height="wrap_content" card_view:layout_constraintEnd_toStartOf="@+id/someImg"
                android:layout_marginEnd="8dp" card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" card_view:layout_constraintHorizontal_bias="0.5"
                card_view:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                android:maxLines="1"
                card_view:layout_constraintBottom_toTopOf="@+id/title" android:textAllCaps="true"/>
        <TextView
                android:id="@+id/title"
                android:text="Title Title Title Title Title Title Title Title Title Title Title "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                card_view:layout_constraintEnd_toStartOf="@+id/someImg" android:layout_marginEnd="8dp"
                card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:maxLines="2" card_view:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="8dp" android:textSize="18sp" android:textStyle="bold"
                card_view:layout_constraintTop_toBottomOf="@+id/category"
                card_view:layout_constraintBottom_toTopOf="@+id/info_text" android:layout_marginBottom="8dp"/>
        <TextView
                android:id="@+id/info_text"
                android:text="k sdfsdf sdf sdf dsf sdf sd fds fds dsfdfkmes ghes kesgfk esng ljreng jresn ge k sdfsdf sdf sdf dsf sdf sd fds fds dsfdfkmes ghes kesgfk esng ljreng jresn ge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                card_view:layout_constraintEnd_toStartOf="@+id/someImg" android:layout_marginEnd="8dp"
                card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:maxLines="3" card_view:layout_constraintHorizontal_bias="0.5"
                card_view:layout_constraintBottom_toBottomOf="@+id/someImg"
                card_view:layout_constraintTop_toBottomOf="@+id/title" android:layout_marginBottom="8dp"/>
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/someImg" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/info_text"
                card_view:layout_constraintHorizontal_bias="0.5" card_view:layout_constraintVertical_bias="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>